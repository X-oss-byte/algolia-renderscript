{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "outDir": "dist/",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "lib/*": ["src/lib/*"],
      "projectRoot": ["src/projectRoot"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
